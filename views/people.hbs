<h1>{{title}}</h1>


<table id="the-table" class="table table-bordered table-hover table-sm table-responsive-lg">
  <thead class="thead-light">
    <tr>
      <th scope="col">Worker No</th>
      <th scope="col">First Name</th>
      <th scope="col">Username</th>
      <th scope="col">Area</th>
      <th scope="col">Section</th>
      <th scope="col">Shift</th>
      <th scope="col">GJS</th>
      <th scope="col">Status</th>
      <th scope="col">Permission</th>
      <th scope="col">Manager</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td><a class="anchor" id="{{this.id}}"></a>{{this.id}}</td>
        <td>{{this.first_name}}</td>
        <td>{{this.username}}</td>
        <td>{{this.area}}</td>
        <td>{{this.section}}</td>
        <td>{{this.shift}}</td>
        <td>{{this.gjs}}</td>
        <td>{{this.status}}</td>
        <td>{{this.permission}}</td>
        <td><a href="#{{this.manager_id}}">{{this.manager_first_name}}</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
